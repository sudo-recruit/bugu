<div class="row">
  <% @bugs.each do |bug| %>
  <div class="col s12 m6 l4">
    <%= link_to bug_path(bug) do %>
  	<div class="card blue-grey">
  		<div class="card-content">
  			<span class="card-title"><%= bug.title %></span>
  			<p><%= bug.body %></p>
  			<li>狀態: <%= convert_chinese(bug) %></li>
  		</div>
  	</div>
  	<% end %>
  </div>
  <% end %>
</div>
