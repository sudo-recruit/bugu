<div class="row">
  <h2><%= @bug.title %></h2>
	
  <% if @bug.filepicker_url.present? %>
    <%= image_tag @bug.filepicker_url %>
  <% end %>
  <p><%= @bug.body %></p>
  <p><%= convert_chinese @bug %></p>
</div>

<div class="row">
  <%= render @bug.comments %>
</div>

<div>
  <%= form_for @bug, :url => {:controller => 'bugs', :action => 'update'} do |f| %>
  <div id="b_selectbox">
  <%= f.select :status, options_for_select(@statuses.collect { |s| [s[0].humanize, s[0]] }, selected: @bug.status), {} , class: "form-control" %>
  <%= f.submit 'submit' %>
  
  <% end %>
</div>
<%= render 'partial/form' %>